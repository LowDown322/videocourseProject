@page
@model RazorPizza.Pages.OrdersModel
@{
}
<h3>Orders</h3>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Pizza Name
            </th>
            <th>
                Price
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.PizzaOrders)
        {
            <tr>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.pizzaName
                </td>
                <td>
                    @order.basePrice
                </td>
            </tr>
        }

        
    </tbody>
</table>